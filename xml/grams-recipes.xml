<?xml version="1.0" encoding="UTF-8"?>
<recipes>
    <recipe name="German sweet chocolate cake" serves="Cake">
        <metadata>
            <notes>1-4oz bar</notes>
        </metadata>
        <ingredients>
            <ingredient type="group_1">
                <item name="Bakers German sweet chocolate" quantity="1" unit="pkg" note="1 oz"/>
                <item name="boiling water" quantity="1/2" unit="cup"/>
                <item name="butter" quantity="1" unit="cup"/>
                <item name="sugar" quantity="2" unit="cups"/>
                <item name="egg yolks" quantity="4"/>
                <item name="vanilla" quantity="1" unit="tsp"/>
            </ingredient>
            <ingredient type="group_2">
                <item name="sifted cake flour" quantity="2 1/2" unit="cups" note="Swan or Softasilk"/>
                <item name="baking soda" quantity="1" unit="tsp"/>
                <item name="salt" quantity="1/2" unit="tsp"/>
                <item name="buttermilk" quantity="1" unit="cup"/>
                <item name="egg whites" quantity="4" note="stiffly beaten"/>
            </ingredient>
        </ingredients>
        <instructions>
            <step action="melt">
                <description>Melt chocolate in boiling water, cool.</description>
            </step>
            <step action="cream">
                <description>Cream butter &amp; sugar till fluffy.</description>
            </step>
            <step action="add">
                <description>Add egg yolks, 1 at a time, beating well. Blend in vanilla &amp; chocolate.</description>
            </step>
            <step action="sift_and_add">
                <description>Sift flour with baking soda &amp; salt. Add alternately with buttermilk/choco mixture. Beat till smooth.</description>
            </step>
            <step action="fold">
                <description>Fold in by hand beaten egg whites.</description>
            </step>
            <step action="bake">
                <description>Pour into 3 round cake pans lined with parchment paper. Bake at 350 for 30-35 min. Cool in pans 15-20 min. Flip and remove paper.</description>
            </step>
        </instructions>
    </recipe>
    
    <recipe name="Whipped Cream Frosting" serves="Frosting">
        <metadata>
            <source>Gramma Mikula &amp; Mom K.</source>
            <date>2005</date>
            <notes>On highest speed</notes>
        </metadata>
        <ingredients>
            <ingredient type="beat_in_mixing_bowl">
                <item name="egg white" quantity="1"/>
                <item name="oleo" quantity="1/2" unit="cup"/>
                <item name="Crisco" quantity="1/2" unit="cup"/>
            </ingredient>
            <ingredient type="add">
                <item name="vanilla" quantity="1" unit="tsp"/>
                <item name="sugar" quantity="1" unit="cup"/>
                <item name="evaporated milk" quantity="2/3" unit="cup">
                    <note>Small can = 2/3 cup</note>
                </item>
            </ingredient>
        </ingredients>
        <instructions>
            <step description="Beat ingredients in mixing bowl on highest speed." action="beat"/>
            <step description="Add the remaining ingredients." action="add"/>
            <step description="Mix until thick and fluffy." action="mix"/>
        </instructions>
    </recipe>
</recipes>
